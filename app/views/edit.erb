<p><%=@recipe.name%></p>
<p><%=@recipe.ingredients%></p>
<p><%=@recipe.cook_time%></p>

<form method="post" action=<%="/recipes/#{@recipe.id}"%>>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Name: <input id="name" type="text" name="recipe[name]"></p>
  <p> Ingredients: <input id="ingredients" type="text" name="recipe[ingredients]"></p>
  <p> Cook Time: <input id="cook_time" type="text" name="recipe[cook_time]"></p>
  <input type="submit" value="submit">
</form>
